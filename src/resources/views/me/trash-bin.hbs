<form method="POST" id="function-form" action="/courses/me/handletrash?_method=GET">
  <table class="table">
    <thead>
      <tr>
        <th>
          <input class="form-check-input chkBoxAll" type="checkbox">
        </th>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Desc</th>
        <th scope="col">videoId</th>
        <th scope="col">deletedAt</th>
        <th></th>
      </tr>
    </thead>
  {{#each data }}
    <tbody>
      <tr>
        <td>
          <input class="form-check-input chkBoxItem" name="deleteItem" value={{this._id}} type="checkbox">
        </td>
        <th scope="row">{{sum @index 1}}</th>
        <td>{{this.name}}</td>
        <td>{{this.desc}}</td>
        <td>{{this.videoId}}</td>
        <td>{{this.deletedAt}}</td>
        <td>
          <a href="/courses/restore?slug={{this.slug}}" class="btn btn-info">Restore</a>
          <a href="" class="btn btn-danger" data-bs-toggle="modal" data-id="{{this._id}}" data-bs-target="#delete-modal">Destroy</a>
        </td>
      </tr>
    </tbody>
    {{else}}
        <td colspan="6" class="text-center">Trash bin are empty</td>
  {{/each}}
        <div class="row mt-4 mb-4 text-center">
            <h2>Trash bin</h2>
        </div>
          <div>
              <a href="/courses/me/manage" class="btn btn-primary">Back</a>
          </div>
          <div class="d-flex mb-4 justify-content-center align-items-center">
              <select class="form-select-s me-2" name="type" required>
                <option value="">-- Option --</option>
                <option value="restore">Restore</option>
                <option value="trulyDelete" >Destroy</option>
              </select>
              <button
                id="submit-form"
                class="btn btn-primary"
                type="submit"
                disabled
              >
                Action
              </button>
            </div>
  </table>
</form>

<!-- Modal -->
<div class="modal fade" id="delete-modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Destroy file!</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        This action can't restore. Are you sure you want to delete?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-warning" id="confirm-delete">Confirm Destroy</button>
      </div>
    </div>
  </div>
</div>
{{!-- Hidden form --}}
<form method="POST" id="delete-form"></form>

<script>
    addEventListener('DOMContentLoaded', () => {
      let btnId;
      const btnConfirm = document.getElementById('confirm-delete')
      const btnSubmitForm = document.getElementById('submit-form')
      const form = document.forms['delete-form']
      const functionForm = document.forms['function-form']
      const chkBoxItem = document.querySelectorAll('input[class="form-check-input chkBoxItem"]')
      const chkBoxAll = document.querySelector('input[class="form-check-input chkBoxAll"]')
      const checkedItem = document.querySelectorAll('input[class="form-check-input chkBoxItem"]:checked');
      const modal = document.getElementById('delete-modal')

      //{{!-- handle checkbox all --}}
      chkBoxAll.onchange = (e) => {
        const itemLength = chkBoxItem.length;
          if(itemLength === 0) {
            e.target.checked = false;
          }
          if(e.target.checked) {
            for(var i = 0; i < itemLength; i++) {
                chkBoxItem[i].checked = true
              } 
            btnSubmitForm.removeAttribute('disabled')
          } else {
            for(var i = 0; i < itemLength; i++) {
                    chkBoxItem[i].checked = false
                  }
            btnSubmitForm.setAttribute('disabled','disabled')
          }
        }

      //{{!-- handle checkbox item --}}
        chkBoxItem.forEach(e=>{
          e.addEventListener('change', (e) => {
              const checked = document.querySelectorAll('input[class="form-check-input chkBoxItem"]:checked');
            if(checked.length == chkBoxItem.length) {
              chkBoxAll.checked=true;
            } else {
              chkBoxAll.checked=false
            }
            if(!e.target.checked && !checked.length > 0) {
            btnSubmitForm.setAttribute('disabled','disabled')
            } else {
            btnSubmitForm.removeAttribute('disabled')
            }
          })
        })

      //{{!-- Open modal --}}
      modal.addEventListener('show.bs.modal', event =>
        {
          const button = event.relatedTarget
          btnId = button.getAttribute('data-id')
        })

      //{{!-- Confirm delete --}}
      btnConfirm.addEventListener('click', e => {
          form.action=`/courses/me/trash/${btnId}?_method=DELETE`
          form.submit()
      })
    });
</script>