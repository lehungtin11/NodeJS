<form method="POST" id="function-form" action="/courses/me/deletemany?_method=DELETE">
  <table class="table">
    <thead>
      <tr>
        <th>
          <input class="form-check-input chkBoxAll" type="checkbox">
        </th>
        <th scope="col">#</th>
        <th scope="col">
          Name
          <a href="?_sort">
            <i class="bi bi-sort-alpha-down"></i>
          </a>
        </th>
        <th scope="col">Desc</th>
        <th scope="col">videoId</th>
        <th scope="col">createdAt</th>
        <th></th>
      </tr>   
    </thead>
  {{#each data }}
    <tbody>
      <tr>
        <td>
          <input class="form-check-input chkBoxItem" name="deleteItem" value={{this._id}} type="checkbox">
        </td>
        <th scope="row">{{sum @index 1}}</th>
        <td>{{this.name}}</td>
        <td>{{this.desc}}</td>
        <td>{{this.videoId}}</td>
        <td>{{this.createdAt}}</td>
        <td>
          <a href="/courses/update?slug={{this.slug}}" class="btn btn-primary">Edit</a>
          <a href="" class="btn btn-primary" data-bs-toggle="modal" data-id="{{this._id}}" data-bs-target="#delete-modal">Delete</a>
        </td>
      </tr>
    </tbody>
    {{else}}
        <td colspan="6" class="text-center">
          You don't have any course.
          <a href="/courses/create">Create new</a>
          </td>
  {{/each}}
          <div class="row mt-4 text-center ">
            <h2>Manage Course</h2>
          </div>
        <div class="row mt-4 justify-content-between">
          <div class="col">
              <a href="/courses/create" class="btn btn-secondary ">Create new course</a>
          </div>
          <div class="col-lg-2" style="padding-left: 80px">
              <a href="/courses/me/trash" class="btn btn-secondary" >
              Trash bin
              ({{deleteCount}})
              </a>
          </div>
        </div>
            <div class="d-flex justify-content-between mt-2">
              <div class="d-flex mb-4 justify-content-center align-items-center">
                <select class="form-select-s me-2" name="type" required>
                  <option value="">-- Option --</option>
                  <option value="delete" >Delete</option>
                </select>
                <button
                  id="submit-form"
                  class="btn btn-primary"
                  type="submit"
                  disabled
                >
                  Action
                </button>
              </div>
              {{!-- Pagination --}}
                <nav aria-label="Page navigation example d-flex justify-content-center align-items-center">
                  <ul class="pagination justify-content-center">
                      {{#if (handlePagination (sum currentPage -1) totalPage)}}
                    <li class="page-item">
                      <a href="/courses/me/manage?page=1" class="page-link">First</a>
                    </li>
                    <li class="page-item">
                      <a class="page-link" href="/courses/me/manage?page={{handlePagination (sum currentPage -1) totalPage}}">{{handlePagination (sum currentPage -1) totalPage}}</a>
                    </li>
                      {{else}}
                    <li class="page-item disabled">
                      <a class="page-link" href="/courses/me/manage">First</a>
                    </li>
                      {{/if}}
                    <li class="page-item active">
                      <a class="page-link" href="#">{{currentPage}}</a>
                    </li>
                    {{#if (handlePagination (sum currentPage 1) totalPage)}}
                    <li class="page-item">
                      <a class="page-link" href="/courses/me/manage?page={{handlePagination (sum currentPage 1) totalPage}}">{{handlePagination (sum currentPage 1) totalPage}}</a>
                    </li>
                    <li class="page-item">
                      <a class="page-link" href="/courses/me/manage?page={{totalPage}}">Last</a>
                    </li>
                      {{else}}
                    <li class="page-item disabled">
                      <a class="page-link" href="/courses/me/manage">Last</a>
                    </li>
                      {{/if}}
                  </ul>
                </nav>
            </div>
  </table>


</form>
      
<!-- Modal -->
<div class="modal fade" id="delete-modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Delete course</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Are you sure to delete?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-danger" id="confirm-delete">Confirm</button>
      </div>
    </div>
  </div>
</div>
{{!-- Hidden form --}}
<form method="POST" id="delete-form"></form>

<script>
    addEventListener('DOMContentLoaded', () => {
      let btnId;
      const btnConfirm = document.getElementById('confirm-delete')
      const btnSubmitForm = document.getElementById('submit-form')
      const form = document.forms['delete-form']
      const functionForm = document.forms['function-form']
      const chkBoxItem = document.querySelectorAll('input[class="form-check-input chkBoxItem"]')
      const chkBoxAll = document.querySelector('input[class="form-check-input chkBoxAll"]')
      const checkedItem = document.querySelectorAll('input[class="form-check-input chkBoxItem"]:checked');
      const modal = document.getElementById('delete-modal')

      //{{!-- handle checkbox all --}}
      chkBoxAll.onchange = (e) => {
        const itemLength = chkBoxItem.length;
          if(itemLength === 0) {
            e.target.checked = false;
          }
          if(e.target.checked) {
            for(var i = 0; i < itemLength; i++) {
                chkBoxItem[i].checked = true
              } 
            btnSubmitForm.removeAttribute('disabled')
          } else {
            for(var i = 0; i < itemLength; i++) {
                    chkBoxItem[i].checked = false
                  }
            btnSubmitForm.setAttribute('disabled','disabled')
          }
        }

      //{{!-- handle checkbox item --}}
        chkBoxItem.forEach(e=>{
          e.addEventListener('change', (e) => {
              const checked = document.querySelectorAll('input[class="form-check-input chkBoxItem"]:checked');
            if(checked.length == chkBoxItem.length) {
              chkBoxAll.checked=true;
            } else {
              chkBoxAll.checked=false
            }
            if(!e.target.checked && !checked.length > 0) {
            btnSubmitForm.setAttribute('disabled','disabled')
            } else {
            btnSubmitForm.removeAttribute('disabled')
            }
          })
        })

      //{{!-- Open modal --}}
      modal.addEventListener('show.bs.modal', event =>
        {
          const button = event.relatedTarget
          btnId = button.getAttribute('data-id')
        })

      //{{!-- Confirm delete --}}
      btnConfirm.addEventListener('click', () => {
          form.action=`/courses/me/${btnId}?_method=DELETE`
          form.submit()
      })
    });
</script>