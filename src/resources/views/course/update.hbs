{{#with data}}
<div class="mt-4">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <form method="POST" action="/courses/updated?slug={{slug}}&_method=PUT">
          <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input type="text" class="form-control" id="name" name="name" autocomplete="off"
              value="{{name}}"
            >
          </div>
          <div class="mb-3">
            <label for="desc" class="form-label">Description</label>
            <textarea type="text" class="form-control" id="desc" name="desc"
              
            >{{desc}}</textarea>
          </div>
          <div class="mb-3">
            <label for="videoId" class="form-label">videoId</label>
            <input type="text" class="form-control" id="videoId" name="videoId"
              value="{{videoId}}"
            >
          </div>
          <button type="submit" class="btn btn-dark fw-bold">Cập nhật</button>
      </form>
    </div>
  </div>
</div>
{{/with}}
